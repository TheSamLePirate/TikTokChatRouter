{
  "appId": "com.tiktokchat.viewer",
  "productName": "TikTok Chat Viewer",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": "dmg",
    "artifactName": "${productName}-${version}-mac.${ext}"
  },
  "linux": {
    "target": "AppImage",
    "artifactName": "${productName}-${version}-linux.${ext}"
  }
}
